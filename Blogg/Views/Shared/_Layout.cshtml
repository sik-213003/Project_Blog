<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Blogging Website</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <section class="navigation-bar">
            @Html.ActionLink("Blogging Website", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <ul class="options">
                <li>@Html.ActionLink("HOME", "Index", "Home")</li>
                <li>@Html.ActionLink("ABOUT", "About", "Home")</li>
                <li>@Html.ActionLink("CONTACT", "Contact", "Home")</li>
                <li>@Html.ActionLink("ALL POSTS", "Index", "Post")</li>
            </ul>
            @Html.Partial("_LoginPartial")
        </section>
    </header>
    <main>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Blogging Website</p>
        </footer>
    </main>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
